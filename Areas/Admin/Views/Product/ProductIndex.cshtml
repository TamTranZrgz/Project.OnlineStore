
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">San pham</h4>
            <div class="card-description mb-3">
                <button class="btn btn-danger">
                    <span class="btn-label">
                        <i class="fa fa-heart"></i>
                    </span>
                    Xoa
                </button>
                <button class="btn btn-secondary" id="btnProduct">
                    <span class="btn-label">
                        <i class="fa fa-plus"></i>
                    </span>
                    Them Moi
                </button>
            </div>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Ten san pham </th>
                        <th> Gia  </th>
                        <th> Thong tin </th>
                        <th> Hinh anh </th>
                        <th> Ngay san xuat </th>
                        <th> So luong </th>
                        <th> Tinh trang </th>
                        <th> Action </th>
                    </tr>
                </thead>
                <tbody id="productList"></tbody>
            </table>
        </div>
    </div>
</div>

@Html.Partial("ProductModal")

@section Scripts {
    <script src="~/js/admin/product.js"></script>
}

